<h1>My Grocery Lists</h1>

<br />

<% if @grocery_lists.empty? %>

	<p>You Have No Lists</p>

<% else %>

	<table>
	  <thead>
	    <tr>
	      <th>Name</th>
				<th>Items</th>
	      <th></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @grocery_lists.each do |grocery_list| %>
	      <tr>
	        <td><%= grocery_list.name %></td>
					<td><%= grocery_list.items.count %></td>
	        <td><%= link_to 'More...', grocery_list %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

<% end %>

<br />

<%= link_to 'New list', new_grocery_list_path, class: 'button round' %>
<%= link_to 'Home', home_path, class: 'button round secondary' %>
