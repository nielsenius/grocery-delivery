<h1>My Grocery Lists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
			<th>Items</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grocery_lists.each do |grocery_list| %>
      <tr>
        <td><%= grocery_list.name %></td>
				<td><%= grocery_list.items.count %></td>
        <td><%= link_to 'Show', grocery_list %></td>
        <td><%= link_to 'Edit', edit_grocery_list_path(grocery_list) %></td>
        <td><%= link_to 'Delete', grocery_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New list', new_grocery_list_path, class: 'button round' %>
