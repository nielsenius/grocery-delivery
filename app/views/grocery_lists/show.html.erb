<p id="notice"><%= notice %></p>

<h2><%= @grocery_list.name %></h2>
<table class="table">
	<tr>
		<th>Name</th>
		<th>Amount</th>
	</tr>
	
	<% @items.each do |item| %>
		<tr>
			<td><%= item.name %></td>
			<td><%= item.amount %></td>
		</tr>
	<% end %>
</table>
		

<%= link_to 'Edit', edit_grocery_list_path(@grocery_list), class: 'button round' %>
