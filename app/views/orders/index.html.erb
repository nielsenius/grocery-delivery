
<h1>Open Orders</h1>

<table>
  <thead>
    <tr>
      <th>Items</th>
      <th>Tip</th>
      <th>Delivery Time</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.num_items %></td>
        <td><%= number_to_currency order.tip %></td>
				<td><%if order.delivery_time.nil? %>
                <%= 'Anytime' %>
             <% else %>
                <%= order.delivery_time.strftime('%B %e, %Y %I:%M %P') %></td>
            <% end %>
        <td><%= link_to 'More...', order %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
